    "font-awesome": "^4.7.0",
    "localforage": "^1.4.3",
    "lodash": "^4.17.2",
    "menubar": "^5.2.0",
    "photon": "github:connors/photon",
    "rc-slider": "^5.4.0",
    "react": "^15.3.2",
