{
  "name": "denon_menu",
  "productName": "DenonMenu",
  "version": "1.0.0",
  "description": "A menubar application made with electron to control your denon receiver",
  "main": "main.js",
  "scripts": {
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js",
    "build-main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "flow-typed-install": "flow-typed install",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/main.development",
    "postinstall": "concurrently \"npm run flow-typed-install\" \"install-app-deps\" \"node node_modules/fbjs-scripts/node/check-dev-engines.js package.json\"",
    "dev": "npm run hot-server -- --start-hot",
    "package": "npm run build && build --publish never",
    "package-all": "npm run build && build -m"
  },
  "build": {
    "appId": "de.figedi.DenonRemote",
    "category": "public.app-category.tools",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "icons/",
      "node_modules/",
      "app.html",
      "main.js",
      "main.js.map",
      "package.json"
    ]
  },
  "directories": {
    "buildResources": "resources",
    "output": "release"
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Figedi/denon_menu.git"
  },
  "author": {
    "name": "F. Kaminski",
    "email": "kaminski.felix@gmail.com",
    "url": "https://github.com/figedi"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Figedi/denon_menu/issues"
  },
  "keywords": [
    "electron",
    "denon",
    "react",
    "menubar"
  ],
  "homepage": "https://github.com/Figedi/denon_menu#readme",
  "devDependencies": {
    "asar": "^0.12.3",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-tcomb": "^0.3.21",
    "babel-plugin-webpack-loaders": "^0.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.13",
    "electron-builder": "^10.8.0",
    "electron-devtools-installer": "^2.0.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-flowtype-errors": "^2.0.1",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.7.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fbjs-scripts": "^0.7.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "html-webpack-plugin": "^2.24.0",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "redux-logger": "^2.7.4",
